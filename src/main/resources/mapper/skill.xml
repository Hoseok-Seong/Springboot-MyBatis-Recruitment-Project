<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="shop.mtcoding.job.model.skill.UserSkillRepository">
    <insert id="insert">
      insert into user_skill_tb(user_id, skill) values(#{userId}, #{skill}) 
    </insert>
    
   <update id="updateById">
      update user_skill_tb set user_id = #{userId}, skill=#{skill} where id = #{id}
   </update>

   <select id="findAll" resultType="shop.mtcoding.job.model.skill.UserSkill">
      select * from user_skill_tb
   </select>

   <select id="findById" resultType="shop.mtcoding.job.model.skill.UserSkill">
      select * from user_skill_tb where id = #{id}  
   </select>

   <delete id="deleteById">
      delete from user_skill_tb where id = #{id}
   </delete>
</mapper>